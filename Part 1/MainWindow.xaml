<Window x:Class="Part_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Municipal Services App" Height="400" Width="600" Background="#F5F5F5">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
        <TextBlock Text="Municipal Services Application" FontSize="24" FontWeight="Bold" Foreground="#3F51B5" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <Button Name="btnReportIssues" Content="Report Issues" Width="250" Height="50" Margin="10" FontSize="16" Foreground="Black" Background="#A8E6A1" Click="btnReportIssues_Click"/>
        <Button Name="btnLocalEvents" Content="Local Events and Announcements" Width="250" Height="50" Margin="10" FontSize="16" Foreground="Black" Background="#FFCCBC" Click="btnLocalEvents_Click"/>
        <Button Name="btnServiceStatus" Content="Service Request Status" Width="250" Height="50" Margin="10" FontSize="16" Foreground="LightGray" Background="#C5E1A5" IsEnabled="False"/>
    </StackPanel>
</Window>
